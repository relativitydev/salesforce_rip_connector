@model SalesForce.Web.Models.ProviderViewModel


<script src="~/Scripts/jquery-1.8.2.js"></script>
<script src="~/Scripts/jquery-postMessage.js"></script>
<script src="~/Scripts/frame-messaging.js"></script>
<script src="~/Scripts/SalesForceProvider.js"></script>


<div id="_main">
    <div id="_dynamicTemplate__kCuraScrollingDiv" class="kCuraScrollingDiv edit-view-from-layout cardContainerNoUpperPadding cardContainerWidthAuto editFieldDiv">
        <div id="_dynamicTemplate__dynamicViewFieldRenderer_templateContainer">
            <table class="editTable" data-name="Salesforce Provider">
                <tbody>
                    <tr>
                        <td class="EditTableColumn" colspan="2">
                            <div class="viewSectionTitle" id="_dynamicTemplate__dynamicViewFieldRenderer_div_0">
                                Salesforce Provider
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="editTableColumn" colspan="1">
                            <table>
                                <tbody>
                                    <tr>
                                        <td class="dynamicEditFieldNameRequired">Salesforce URI:</td>
                                        <td class="dynamicEditFieldValue">
                                            @Html.TextBoxFor(model => Model.SalesforceURI, new { style = "width:200px" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="dynamicEditFieldNameRequired">Salesforce UserID:</td>
                                        <td class="dynamicEditFieldValue">
                                            @Html.TextBoxFor(model => Model.SalesforceUserID, new { style = "width:200px", @maxlength = "200" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="dynamicEditFieldNameRequired">Salesforce User PWD:</td>
                                        <td class="dynamicEditFieldValue">
                                            @Html.TextBoxFor(model => Model.SalesforceUserPwd, new { style = "width:200px", @maxlength = "200", type = "password" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="dynamicEditFieldNameRequired">Start Date:</td>
                                        <td class="dynamicEditFieldValue">
                                            @Html.TextBoxFor(model => model.StartDate, new { 
                                                type = "date" 
                                            })
                                        </td>
                                    </tr>
                                    @*<tr>
                                        <td class="dynamicEditFieldNameRequired">Ticket Type:</td>
                                        <td class="dynamicEditFieldValue">
                                            @Html.TextBoxFor(model => Model.TicketType, new { style = "width:200px", @maxlength = "200" })
                                        </td>
                                    </tr>*@
 
                                </tbody>
                            </table>

                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

